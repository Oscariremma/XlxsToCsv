<Window x:Class="XlxsToCsv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XlxsToCsv"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Drop="HandleFileDrop"
        AllowDrop="True">
    <Grid Drop="HandleFileDrop" AllowDrop="True">
        <TextBox Name="outputTextBox" HorizontalAlignment="Center" Margin="0,158,0,0" TextWrapping="Wrap" Text="Dra en xlsx fil till fönstret" VerticalAlignment="Top" Width="365" Height="224" PreviewDragOver="TextBox_PreviewDragOver" Drop="HandleFileDrop" AllowDrop="True"/>
        <CheckBox Name="clipboardCheckBox" Content="Lägg resultat i clipboard" HorizontalAlignment="Center" Margin="0,122,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
